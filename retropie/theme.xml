<theme>
    <formatVersion>4</formatVersion>
    <include>./../workbench-64.xml</include>

	<view name="detailed, video, grid, basic">
		<!-- Override system name -->
		<text name="logoText">
			<text>** Retropie Settings **</text>
        </text>
	</view>

<view name="detailed">
    <text name="md_genre">
        <pos>2 2</pos>
    </text>

    <datetime name="md_releasedate">
        <pos>2 2</pos>
    </datetime>

    <text name="md_lbl_players">
        <pos>2 2</pos>
    </text>

    <text name="md_players">
        <pos>2 2</pos>
    </text>
	<text name="md_description">
    	<pos>${alignLeft} 0.617</pos>
        <size>0.55 0.252</size>
        <lineSpacing>1.147</lineSpacing>
        <origin>0 0</origin>
	</text>

	</view>

	<view name="system">
	

		<text name="logoText">
			<text>Retropie Settings</text>
    	</text>  

	<image name="console" extra="true">
		<path>./console.png</path>
	</image>
		


<text name="stats" extra="true"><text>
 <!-- System stats/metadata: 
	 Max 8 rows, 24 column 
	 remove all space to the left to avoid display issues--> 

</text></text>

	
</theme>